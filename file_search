#!/bin/bash

if [ -z "$2" ]; then
  echo "Usage: file_search <repo> <pattern>"
	exit
fi

repo=$1

if [ ! -d "$1" ]; then
	echo "Directory \"$repo\" does not exist."
	exit
fi

find $repo -type f | while read filename
do
	if [ -n "`grep "$2" "$filename"`" ]
		file_list+="$filename\n"
done

# Ordinare e formattare la lista (file_list)
