#!/bin/bash

if [ -n "$2" ]; then
  	echo "Usage: status <repo>"
	exit
fi

working_dir=$1
backup_dir=".$1.bck"

if [ ! -d "$working_dir" ]; then 
	echo "Directory \"$working_dir\" does not exist."
	exit
fi

if [ ! -d "$backup_dir" ]; then
	echo "Repository \"$1\" has not been initialized."
	exit
fi

find $working_dir -type f | while read filename
do
	file_backup="$backup_dir/`echo $filename | cut -d/ -f2-`"  #taglia via il $working_dir/
	if [ ! -f "$file_backup" ] || [ -n "`diff "$filename" "$file_backup"`" ]; then
		file_list+="`echo $filename | cut -d/ -f2-`\n"
	fi
done

if [ -n "$file_list" ]; then
	echo "Everything is up to date."
else
	echo -e "Files to be committed:\n"
	echo -e "$file_list"
fi
